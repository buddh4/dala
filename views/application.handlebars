<!-- Login Settings Dialog -->
<div id="login-dialog" title="Login">
    <form>
        <fieldset>
            <label for="host">Email</label>
            <input type="text" name="email" id="login_email" class="text ui-widget-content ui-corner-all">
            <label for="password">Password</label>
